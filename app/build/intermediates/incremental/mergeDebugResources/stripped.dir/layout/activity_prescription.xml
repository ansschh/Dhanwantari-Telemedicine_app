<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcshowprescription"
    tools:context=".Prescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/include"
            layout="@layout/prescritionformtoolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Prescription Form"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name Of Disease You Found"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="7dp"
                            android:id="@+id/_disease_"
                            app:boxCornerRadiusBottomStart="7dp"
                            app:boxCornerRadiusTopEnd="7dp"
                            app:boxCornerRadiusTopStart="7dp">
                            <EditText
                                android:id="@+id/founddisease"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="15dp"
                                android:hint="Type The Name Of Disease You Found"
                                android:textColorHint="@color/stroke_color"
                                android:layout_weight="1"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name Of Drug Medicine*"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="7dp"
                            app:boxCornerRadiusBottomStart="7dp"
                            android:id="@+id/drug_"
                            app:boxCornerRadiusTopEnd="7dp"
                            app:boxCornerRadiusTopStart="7dp">
                            <EditText
                                android:id="@+id/drugname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="15dp"
                                android:hint="Type Name Of Drug"
                                android:textColorHint="@color/stroke_color"
                                android:layout_weight="1"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount of Drug/Dose*"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="7dp"
                            app:boxCornerRadiusBottomStart="7dp"
                            android:id="@+id/dose_"
                            app:boxCornerRadiusTopEnd="7dp"
                            app:boxCornerRadiusTopStart="7dp">
                            <EditText
                                android:id="@+id/dose"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="15dp"
                                android:hint="Enter Dose Of Drug"
                                android:textColorHint="@color/stroke_color"
                                android:layout_weight="1"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type &amp; Enter Frequency*"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="7dp"
                            app:boxCornerRadiusBottomStart="7dp"
                            app:boxCornerRadiusTopEnd="7dp"
                            android:id="@+id/frequency_"
                            app:boxCornerRadiusTopStart="7dp">
                            <EditText
                                android:id="@+id/frequency"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="15dp"
                                android:hint="Enter Frequency of Drug"
                                android:textColorHint="@color/stroke_color"
                                android:layout_weight="1"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type Duration Of Order*"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="7dp"
                            app:boxCornerRadiusBottomStart="7dp"
                            android:id="@+id/duration"
                            app:boxCornerRadiusTopEnd="7dp"
                            app:boxCornerRadiusTopStart="7dp">
                            <EditText
                                android:id="@+id/duration_of_order"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="15dp"
                                android:hint="Enter Duration Of Order"
                                android:textColorHint="@color/stroke_color"
                                android:layout_weight="1"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please Do Your Signature*"
                            android:textSize="10dp"
                            android:textColor="@color/stroke_color"/>

                        <com.github.gcacace.signaturepad.views.SignaturePad
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="15dp"
                            android:background="#DFDFDF"
                            app:penColor="@color/black"
                            android:id="@+id/signature_pad"/>
                        <TextView
                            android:id="@+id/clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/signup_color"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_btn"
                            android:text="Clear"/>
                        <TextView
                            android:id="@+id/uu"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/signup_color"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_btn"
                            android:text="Clear"/>
                        <TextView
                            android:id="@+id/uu1"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/signup_color"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_btn"
                            android:text="Clear"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/submitprescription"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="40dp"
                        android:layout_height="match_parent"
                        android:text="Submit"/>
                </LinearLayout>

            </TableLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>