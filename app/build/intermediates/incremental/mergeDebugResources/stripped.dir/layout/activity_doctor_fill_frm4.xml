<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorFillForm4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="Medical Registration Proof"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="Please upload your medical registration proof. Only licensed and genuine doctors are listed on Dharnawati.\n
\n Acceptable documents
\n Medical Registration Certification
\n 05959098409064 Medical Council of India (MCI)"/>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#BDBDBD"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Please Upload Image of Your Medical Proof"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <Button
                        android:text="Upload"
                        android:id="@+id/medicalproof"
                        android:drawableStart="@drawable/ic_baseline_cloud_upload_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/imageuploaded"
                android:background="@drawable/uploadingdone"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:elevation="10dp"
                android:text="Image Uploaded"
                android:drawableEnd="@drawable/ic_baseline_done_24"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="#3FA103"/>
            <TextView
                android:id="@+id/errorforimage"
                android:background="@drawable/error_btn"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:elevation="10dp"
                android:text="Image Could Not Be Uploaded"
                android:drawableEnd="@drawable/ic_baseline_done_24"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="#CD0000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/signup_color"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:background="@drawable/edit_text_btn"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42.5dp"
                    android:text="Next"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/nextbutton4"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:background="@drawable/nextbutton"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>