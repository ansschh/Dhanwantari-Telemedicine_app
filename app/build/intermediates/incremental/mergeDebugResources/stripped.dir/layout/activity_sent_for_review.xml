<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SentForReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_rawRes="@raw/submitted"
            app:lottie_loop="false"
            app:lottie_autoPlay="true" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations,\nYou application has successfully been submitted for review"
            android:textSize="23dp"
            android:textColor="#13B000"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application ID"
            android:id="@+id/appid"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textColor="@color/stroke_color"
            android:layout_marginHorizontal="40dp"/>
        <TextView
            android:id="@+id/gotohomescreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go To Home Screen"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/signup_color"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:background="@drawable/edit_text_btn"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>


</RelativeLayout>