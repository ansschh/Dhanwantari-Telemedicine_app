<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DoctorFillForm">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        android:scrollbars="none"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/black"
                android:text="Hello ! "/>

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Dr. Name"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/dummy_for_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Dr. Name"
                android:visibility="gone"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:text="Let's create your dedicated profile"/>

                <LinearLayout
                    android:id="@+id/photo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"/>
                    <TextView
                        android:id="@+id/age_check_for_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Specialization*"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/getdoctor_uid_dummy2"
                    android:text="Specialization*"
                    android:visibility="gone"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="7dp"
                    android:id="@+id/specilization_inputtext"
                    app:boxCornerRadiusBottomStart="7dp"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    android:layout_marginHorizontal="30dp">

                    <AutoCompleteTextView
                        android:id="@+id/specializations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="15dp"
                        android:hint="Type &amp; Select Specilization"
                        android:textColorHint="@color/stroke_color"
                        android:inputType="text"
                        android:layout_weight="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Degree*"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/degree_inputtext"
                    app:boxCornerRadiusBottomEnd="7dp"
                    app:boxCornerRadiusBottomStart="7dp"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    android:layout_marginHorizontal="30dp">

                    <AutoCompleteTextView
                        android:id="@+id/degree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="15dp"
                        android:hint="Type &amp; Select Degree"
                        android:textColorHint="@color/stroke_color"
                        android:inputType="text"
                        android:layout_weight="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="College/Institute*"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/college_inputtext"
                    app:boxCornerRadiusBottomEnd="7dp"
                    app:boxCornerRadiusBottomStart="7dp"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    android:layout_marginHorizontal="30dp">

                    <AutoCompleteTextView
                        android:id="@+id/institute"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="15dp"
                        android:hint="Type &amp; Select College/Institute"
                        android:textColorHint="@color/stroke_color"
                        android:inputType="text"
                        android:layout_weight="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Year of Completion*"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:id="@+id/yearofcompletion_inputtext"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="7dp"
                    app:boxCornerRadiusBottomStart="7dp"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    android:layout_marginHorizontal="30dp">

                    <AutoCompleteTextView
                        android:id="@+id/yearofcomepletion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="15dp"
                        android:hint="Type &amp; Select Year of Completion"
                        android:textColorHint="@color/stroke_color"
                        android:inputType="number"
                        android:layout_weight="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Year of Expirience*"
                    android:textSize="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/stroke_color"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="7dp"
                    app:boxCornerRadiusBottomStart="7dp"
                    android:id="@+id/yearofexpirience_inputTextVew"
                    app:boxCornerRadiusTopEnd="7dp"
                    app:boxCornerRadiusTopStart="7dp"
                    android:layout_marginHorizontal="30dp">
                    <EditText
                        android:id="@+id/yearofexpirirnce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="15dp"
                        android:hint="Type Year(s) of Expirience"
                        android:textColorHint="@color/stroke_color"
                        android:inputType="number"
                        android:layout_weight="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Eshtablishment*"
                android:textSize="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/stroke_color"/>
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/owner"
                    android:layout_marginTop="10dp"
                    android:elevation="3dp"
                    android:paddingHorizontal="10dp"
                    android:button="@android:color/transparent"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/text_color"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="I am owner of an eshtablishment"/>
                <RadioButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/rented"
                    android:paddingHorizontal="10dp"
                    android:elevation="3dp"
                    android:button="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/text_color"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="I am rented at other eshtablishment"/>
                <RadioButton
                    android:id="@+id/consultant"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:layout_width="242dp"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/text_color"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="I am a consultant doctor"/>
                <RadioButton
                    android:id="@+id/practicing"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/text_color"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="I am practicing at home"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/signup_color"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                    android:background="@drawable/edit_text_btn"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/nextbutton"
                    android:layout_width="100dp"
                    android:layout_height="42.5dp"
                    android:text="Next"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                    android:background="@drawable/nextbutton"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>
            </TableLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Dummy Text"
        android:id="@+id/selectedText_radioButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Dummy Text"
        android:id="@+id/stateofdoctorfill"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Dummy Text"
        android:id="@+id/districtofdoctorfill"/>
</LinearLayout>