<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gd4"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TreatmentForDisease">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Treatment"
                        android:textSize="20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:id="@+id/texttospeechbutton_treatment"
                        android:background="@drawable/edit_text_btn"
                        android:layout_marginRight="5dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_volume_up_24"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:id="@+id/stoptexttospeech_treatment"
                        android:layout_height="30dp"
                        android:background="@drawable/edit_text_btn"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_stop_circle_24"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/abouttreatment"
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="textStart"
                    android:text="@string/DiseaseAbout"
                    android:textSize="13.5dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#3C3C3C"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/talktoadoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/editbtn1"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:text="Talk to a doctor"
                    android:layout_marginBottom="25dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/buymedicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/edit_text_btn"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:text="Buy Medicine"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/signup_color"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/edit_text_btn"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="10dp"
                    android:text="Buy Medicine"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/signup_color"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </TableLayout>
    </ScrollView>

</FrameLayout>