<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DoctorFillForm2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Verification"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/dummy_of_doctors_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Verification"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Registration Number*"
            android:textSize="10dp"
            android:textColor="@color/stroke_color"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="7dp"
            android:id="@+id/registration_input"
            app:boxCornerRadiusBottomStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusTopStart="7dp">
            <EditText
                android:id="@+id/reg_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:hint="Type Registration Number"
                android:textColorHint="@color/stroke_color"
                android:layout_weight="1"/>
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registration Council*"
            android:textSize="10dp"
            android:textColor="@color/stroke_color"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reg_coucils"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusTopStart="7dp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:id="@+id/nameofcoucils"
                android:hint="Type &amp; Select Registration Council"
                android:textColorHint="@color/stroke_color"
                android:inputType="text"
                android:layout_weight="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Year*"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/stroke_color"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            android:id="@+id/reg_year"
            app:boxCornerRadiusTopStart="7dp">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="15dp"
                android:id="@+id/registrationyear"
                android:hint="Type Registration Year"
                android:textColorHint="@color/stroke_color"
                android:inputType="number"
                android:layout_weight="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/signup_color"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:background="@drawable/edit_text_btn"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="42.5dp"
                android:text="Next"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/nextbutton2"
                android:textColor="@color/white"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                android:background="@drawable/nextbutton"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>