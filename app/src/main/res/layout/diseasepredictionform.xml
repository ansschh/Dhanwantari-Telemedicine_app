<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckDisease">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disease Prediction"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:id="@+id/Symp1"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:boxCornerRadiusBottomEnd="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                android:layout_marginHorizontal="30dp">

                <AutoCompleteTextView
                    android:id="@+id/Symptom1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:hint="Select Symptom"
                    android:textColorHint="@color/stroke_color"
                    android:inputType="none"
                    android:layout_weight="1"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Symp2"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                android:layout_marginHorizontal="30dp">

                <AutoCompleteTextView
                    android:id="@+id/Symptom2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:hint="Select Symptom"
                    android:textColorHint="@color/stroke_color"
                    android:inputType="none"
                    android:layout_weight="1"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Symp3"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                android:layout_marginHorizontal="30dp">

                <AutoCompleteTextView
                    android:id="@+id/Symptom3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:hint="Select Symptom"
                    android:textColorHint="@color/stroke_color"
                    android:inputType="none"
                    android:layout_weight="1"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Symp4"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                android:layout_marginHorizontal="30dp">

                <AutoCompleteTextView
                    android:id="@+id/Symptom4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:hint="Select Symptom"
                    android:textColorHint="@color/stroke_color"
                    android:inputType="none"
                    android:layout_weight="1"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/Symp5"
                app:boxCornerRadiusBottomEnd="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                android:layout_marginHorizontal="30dp">

                <AutoCompleteTextView
                    android:id="@+id/Symptom5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="15dp"
                    android:hint="Select Symptom"
                    android:textColorHint="@color/stroke_color"
                    android:inputType="none"
                    android:layout_weight="1"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/DiseaseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="Disease"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/CheckDisease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signup_button"
                android:text="Check Disease"
                android:layout_marginHorizontal="40dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Symptom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom 1"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/Symptom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom 2"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/Symptom_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom 3"
                android:gravity="center"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/Symptom_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom 4"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/Symptom_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom 5"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="20dp"
                android:layout_marginTop="7dp"/>
        </TableLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>