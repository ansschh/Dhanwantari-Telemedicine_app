<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_"
    android:layout_height="match_parent"
    tools:context=".BookASlot">
    <include  layout="@layout/toolbar_selecttime"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Timing"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/firasansmedium"/>
                    <TextView
                        android:id="@+id/dummy"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Timing"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:textColor="@color/white"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/firasansmedium"/>
                </LinearLayout>
                <Button
                    android:layout_marginVertical="30dp"
                    android:id="@+id/selectdate"
                    android:drawableEnd="@drawable/ic_baseline_date_range_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mDateDisplay"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="Appointment Date"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"/>
            </LinearLayout>
                <TextView
                    android:id="@+id/noslots"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="@color/stroke_color"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    android:text="No Slot's Available"/>
                <ImageView
                    android:id="@+id/noslots2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_terrain_24"/>
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_marginVertical="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/slot1_"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 1"/>
                    <RadioButton
                        android:id="@+id/slot2_"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 2"/>
                    <RadioButton
                        android:id="@+id/slot3_"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 3"/>
                    <RadioButton
                        android:id="@+id/slot4_"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 4"/>
                    <RadioButton
                        android:id="@+id/slot5_"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 5"/>
                    <RadioButton
                        android:id="@+id/slot6_"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 6"/>
                    <RadioButton
                        android:id="@+id/slot7_"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:visibility="gone"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 7"/>
                    <RadioButton
                        android:id="@+id/slot8_"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 8"/>
                    <RadioButton
                        android:id="@+id/slot9_"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:visibility="gone"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 9"/>
                    <RadioButton
                        android:id="@+id/slot10_"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:button="@android:color/transparent"
                        android:layout_width="242dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/text_color"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="SLOT 10"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:id="@+id/backbutton11"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/signup_color"
                        android:padding="10dp"
                        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_new_24"
                        android:background="@drawable/edit_text_btn"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/nextbutton7"
                        android:layout_width="100dp"
                        android:layout_height="42.5dp"
                        android:text="Next"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                        android:background="@drawable/nextbutton"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/nextbuttoninfinity"
                        android:visibility="gone"
                        android:layout_width="100dp"
                        android:layout_height="42.5dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                        android:background="@drawable/nextbutton"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"/>

                </LinearLayout>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</LinearLayout>